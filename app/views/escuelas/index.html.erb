<h1>Listado de escuelas</h1>

<table class="table table-stripped">
  <tr>
    <th>Numero</th>
    <th>Nombre</th>
    <th>Localidad</th>
    <th>Nivel</th>
    <th>Jornada</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @escuelas.each do |escuela| %>
  <tr>
    <td><%= escuela.numero %></td>
    <td><%= escuela.nombre %></td>
    <td><%= escuela.localidad %></td>
    <td><%= escuela.nivel %></td>
    <td><%= escuela.jornada %></td>
    <td><%= link_to 'Ver', escuela, :class => "btn btn-info" %></td>
    <td><%= link_to 'Editar', edit_escuela_path(escuela), :class =>  "btn btn-primary" %></td>
    <td><%= link_to 'Eliminar', escuela, method: :delete, data: { confirm: 'Seguro desea eliminar?' }, :class =>  "btn btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nueva Escuela', new_escuela_path, :class =>  "btn btn-success" %>
