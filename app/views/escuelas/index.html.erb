<h1>Listado de escuelas</h1>

<table class="table table-striped">
  <tr>
    <th>Numero</th>
    <th>Nombre</th>
    <th>Localidad</th>
    <th>Nivel</th>
    <th>Jornada</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @escuelas.each do |escuela| %>
  <tr>
    <td><%= escuela.numero %></td>
    <td><%= escuela.nombre %></td>
    <td><%= escuela.localidad %></td>
    <td><%= escuela.nivel %></td>
    <td><%= escuela.jornada %></td>
    <td><% if can? :read, Escuela %><%= link_to 'ver', escuela, :class => "btn btn-info" %><% end %></td>
    <td><% if can? :update, Escuela %><%= link_to 'editar', edit_escuela_path(escuela), :class =>  "btn btn-primary" %><%end%></td>
    <td><% if can? :destroy, Escuela %><%= link_to 'eliminar', escuela, method: :delete, data: { confirm: 'Seguro desea eliminar?' }, :class =>  "btn btn-danger" %><% end %></td>
  </tr>
<% end %>
</table>

<br />

<% if can? :create, Escuela %><%= link_to 'Nueva Escuela', new_escuela_path, :class =>  "btn btn-success" %><% end %>
